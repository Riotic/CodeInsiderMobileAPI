<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    card_view:cardCornerRadius="35dp"
    android:padding="5dp"
    android:elevation="8dp"
    android:id="@+id/company_card_container"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/CardPostCardName"
            android:layout_width="170dp"
            android:layout_height="54dp"
            android:padding="8dp"
            android:text="Jobtitle"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/CardPostCardDesc"
            android:layout_width="171dp"
            android:layout_height="49dp"
            android:layout_gravity="bottom"
            android:text="Description"
            android:padding="5dp"
            android:fontFamily="@font/roboto_light"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:translationX="-168dp" />


        <TextView
            android:id="@+id/CardPostJobtype"
            android:layout_width="122dp"
            android:layout_height="34dp"
            android:fontFamily="@font/roboto_light"
            android:text="Alternance"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:translationX="-168dp" />

        <ImageButton
            android:id="@+id/CardPostHeartbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:translationX="-135dp"
            card_view:srcCompat="@drawable/ic_like_outline_red" />

        <ImageButton
            android:id="@+id/CardPostEditbtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:background="@color/white"
            android:translationX="-185dp"
            card_view:srcCompat="@drawable/ic_edit_pen_blue" />

        <ImageButton
            android:id="@+id/CardPostDeletebtn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:translationX="-230dp"
            card_view:srcCompat="@drawable/ic_delete" />

    </LinearLayout>

</androidx.cardview.widget.CardView>