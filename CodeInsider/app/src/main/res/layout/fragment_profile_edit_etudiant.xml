<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.FragmentProfileEditEtudiant">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="95dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_code_insider_blanc" />

    <ImageView
        android:id="@+id/textCode"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30dp"
        android:src="@drawable/text_code_insider_blanc" />

    <ScrollView
        android:id="@+id/Formulaire"
        android:layout_marginTop="-15dp"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_below="@+id/textCode"
        android:layout_marginStart="50dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/EditFirstnameEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textCode"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-10dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_profile"
                android:ems="13"
                android:hint=" Votre prénom"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditNameEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditFirstNameS"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_profile_outline"
                android:ems="13"
                android:hint=" Votre nom"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditBirthdayEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditNameS"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_cake"
                android:ems="13"
                android:hint=" Votre date de naissance"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditAdressEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditBirthdayS"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_adresse"
                android:ems="13"
                android:hint=" Votre Adresse"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditPhoneNumberEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditAdressS"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_phone"
                android:ems="13"
                android:hint="Numéro de téléphone"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditCuriculumYearEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditPhoneNumberS"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_domain"
                android:ems="13"
                android:hint=" Année d'étude"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditRequestedRemunerationEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditCuriculumYear"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_payment"
                android:ems="13"
                android:hint=" Rémunération demandée"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditContractTypeEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditRequestedRemuneration"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_portrait"
                android:ems="13"
                android:hint=" Type du contrat"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditContractTimeEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditContractType"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_calendar_month"
                android:ems="13"
                android:hint=" Durée du contrat"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditEmailEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/EditContractTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_email"
                android:ems="13"
                android:hint=" Email"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EditSkillsEtudiant"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_below="@+id/EditPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:backgroundTint="@color/light_white"
                android:drawableLeft="@drawable/ic_lightbulb"
                android:ems="13"
                android:hint=" Compétences"
                android:minHeight="48dp"
                android:textColorHint="@color/light_white"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EditButtonEtudiant"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Formulaire"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:elevation="10dp"
        android:text="Mettre à jour"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/SuppressButtonEtudiant"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditButtonEtudiant"
        android:layout_marginStart="140dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Supprimer votre compte"
        android:textColor="@color/light_red"
        android:textStyle="bold" />

</RelativeLayout>