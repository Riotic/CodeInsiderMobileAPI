<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.FragmentLogin">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_code_insider_blanc" />

    <ImageView
        android:id="@+id/textCode"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="-20dp"
        android:src="@drawable/text_code_insider_blanc" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_email"
        android:ems="13"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <EditText

        android:id="@+id/LoginPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_lock"
        android:ems="13"
        android:hint=" Mot De Passe"
        android:inputType="textPassword"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LoginButton"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/LoginRadio"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button"
        android:elevation="10dp"
        android:text="S'identifier"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/LoginButton"
        android:text="Vous n'avez pas de compte ?"
        android:layout_marginStart="75dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/LoginTextRegister"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:layout_below="@+id/LoginButton"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="S'inscrire"
        android:textColor="@color/cyan"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/LoginRadio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LoginPassword"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/LoginRadioOne"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/custom_radio_button"
            android:gravity="center"
            android:text="Ã‰tudiant"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/LoginRadioTwo"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/custom_radio_button"
            android:gravity="center"
            android:text="Entreprise"
            android:textAlignment="center"
            android:textColor="@color/white" />

    </RadioGroup>


</RelativeLayout>