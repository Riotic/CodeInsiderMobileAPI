<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Fragment.FragmentProfileEditEntreprise">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="95dp"
        android:layout_height="125dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_code_insider_blanc" />

    <ImageView
        android:id="@+id/textCode"
        android:layout_width="400dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imageView4"
        android:layout_marginTop="-30dp"
        android:src="@drawable/text_code_insider_blanc" />

    <EditText
        android:id="@+id/EditNameEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textCode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_account_balance"
        android:ems="13"
        android:hint=" Nom de l'entreprise"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/EditAdressEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditNameEntreprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_adresse"
        android:ems="13"
        android:hint=" Adresse"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/EditDescriptionEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditAdressEntreprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_baseline_text_snippet_24"
        android:ems="13"
        android:hint=" Description"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/EditPhoneNumberEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditDescriptionEntreprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_phone"
        android:ems="13"
        android:hint="Numéro de téléphone"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/EditEmailEntreprise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditPhoneNumberEntreprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/light_white"
        android:drawableLeft="@drawable/ic_email"
        android:ems="13"
        android:hint=" Email"
        android:textColorHint="@color/light_white"
        android:textSize="18sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/EditButtonEntreprise"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_below="@+id/EditEmailEntreprise"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:elevation="10dp"
        android:text="Mettre à jour"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/SuppressButtonEntreprise"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EditButtonEntreprise"
        android:layout_marginStart="140dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Supprimer votre compte"
        android:textColor="@color/light_red"
        android:textStyle="bold" />

</RelativeLayout>